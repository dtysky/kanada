{
  "compilerOptions": {
    "outDir": "./bin/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react"
  },
  "include": [
    "src/**/*.ts",
    "spec/**/*.ts",
    "node_modules/**/*.d.ts",
    "node_modules/@types/**/*.ts",
    "typings/**/*.d.ts"
  ]
}